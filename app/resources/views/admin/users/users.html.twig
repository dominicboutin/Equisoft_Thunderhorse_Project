{% extends 'admin/layout.html.twig' %}

{% block content %}

    <script type="application/javascript">
        $(document).ready(function() {
            $('#table-users').dataTable();
        } );
    </script>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage Users</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Users List
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table-users" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('admin-user', { 'id' : user.id }) }}">{{ user.id }}</a></td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.username }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <div>{{ role.name }}</div>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>

{% endblock %}

{% block afterscript %}
    <!-- DataTables JavaScript -->
    <script src="{{ app.request.basepath }}/js/libs/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="{{ app.request.basepath }}/js/libs/plugins/dataTables/dataTables.bootstrap.js"></script>
{% endblock %}


