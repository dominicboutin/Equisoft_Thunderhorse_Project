{% extends 'admin/layout.html.twig' %}

{% block content %}

    <script type="application/javascript">
        $(document).ready(function() {
            $('#table-roles').dataTable();
        } );
    </script>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage Roles</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Roles List
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table-roles" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for role in roles %}
                        <tr>
                            <td>{{ role.id }}</td>
                            <td><a href="{{ path('admin-role', { 'id' : role.id }) }}">{{ role.name }}</a></td>
                            <td>{{ role.role }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>

{% endblock %}

{% block afterscript %}
    <!-- DataTables JavaScript -->
    <script src="{{ app.request.basepath }}/js/libs/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="{{ app.request.basepath }}/js/libs/plugins/dataTables/dataTables.bootstrap.js"></script>
{% endblock %}


